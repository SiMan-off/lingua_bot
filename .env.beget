# Beget Environment Variables
# Заполните эти переменные на сервере Beget

# Telegram Bot (обязательно)
BOT_TOKEN=your_bot_token_here

# OpenAI API (обязательно для работы AI функций)
OPENAI_API_KEY=your_openai_api_key_here

# Yandex Translate API (опционально, для лучшего качества переводов)
YANDEX_API_KEY=your_yandex_api_key_here

# DeepL API (опционально, для высокого качества переводов)
DEEPL_API_KEY=your_deepl_api_key_here

# Payment System YooKassa (опционально, для приема платежей)
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key
PAYMENT_WEBHOOK_SECRET=your_webhook_secret

# Admin Settings (ваш Telegram user ID)
ADMIN_IDS=1455172192,6516635240

# Database (путь на Beget)
DATABASE_PATH=data/bot.db

# Subscription Prices (цены в рублях)
MONTHLY_PRICE=490
YEARLY_PRICE=4680

# Limits (лимиты для бесплатных пользователей)
FREE_DAILY_LIMIT=10
MAX_HISTORY_ITEMS=100

# ElevenLabs (опционально, для премиум озвучки)
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# Google Cloud (опционально, для голосовых функций)
GOOGLE_APPLICATION_CREDENTIALS=path_to_google_credentials.json

# Beget specific settings
PYTHONUNBUFFERED=1